.breadcrumbs
  margin-bottom 25px
  padding-left 5px
  
.breadcrumbs__items
  display flex
  align-items center
  margin-right 10px
  &::after
    content ''
    
    width 6px
    height 2px
    margin-left 10px
    
    background-color #cecece
  &:last-child
    margin-right 0
    &::after
      display none

.breadcrumbs__link
  font-size 15px
  line-height 18px
  color #848080
  
  transition 0.2s ease
  &:hover
    color #d53c36
    
@media(max-width 550px)
  .breadcrumbs
    &--cart-inner
      margin-bottom 10px
      padding-left 0
      .breadcrumbs__link
        font-size 12px
        line-height 15px
        
@media(max-width 440px)
  .breadcrumbs
    &--basket
      margin-bottom 0
      padding-left 0
    
@media(max-width 420px)
  .breadcrumbs
    &--cart-inner
      flex-wrap wrap
    