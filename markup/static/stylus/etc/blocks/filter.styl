.filter__content
  box-sizing border-box
  width 235px
  margin-right 10px
  padding-top 15px
  padding-bottom 15px
  
  background-color #fdfaef
  
  border 1px solid #eaeaea
  &--inner
    margin-right 20px
  
.filter__headline
  margin-bottom 15px
  padding-left 15px
  padding-bottom 15px
  
  font-size 16px
  line-height 19px
  color #000000
  
  border-bottom 1px solid #eaeaea
  &--no-border
    border-bottom none
    
.filter__content-range-controls
  margin-bottom 10px
  padding-bottom 20px
  
  border-bottom 1px solid #eaeaea
  
.filter__checkbox-list
  margin-bottom 15px
  padding-left 15px
  padding-bottom 30px
  
  border-bottom 1px solid #eaeaea
  &--inner-cart
    margin 0
    padding 0
    
    border-bottom none
    .filter__checkbox-items
      margin-right 20px
      margin-bottom 0
      &:last-child
        margin-right 0
  
.filter__checkbox-items
  margin-bottom 20px
  &:last-child
    margin-bottom 0
  
.filter__input
  &:checked + .filter__label
    .filter__label-indicator
      background-color #ee4543
      
      border-color #ee4543
  
.filter__label
  position relative
  
  padding-left 33px
  
  font-size 16px
  line-height 19px
  color #000000
  
  cursor pointer
  &:hover
    .filter__label-indicator
      border-color #ee4543
  
.filter__label-indicator
  position absolute
  top 0
  left 0
  bottom 0
  
  box-sizing border-box
  width 23px
  height 23px
  margin auto
  
  border 2px solid #dcdcdc
  border-radius 5px
  
  transition 0.2s ease
  &::before,
  &::after
    center-absolute()
    
    content ''
    
    height 2px
    
    background-color #fdfaef
  &::before
    right 11px
    bottom -3px
    
    width 45%
    
    transform rotate(45deg)
  &::after
    right -5px
    bottom 2px
    
    width 85%
    
    transform rotate(-45deg)
    
.filter__submit-button-wrap
  padding 0 15px
    
.filter__submit-button
  padding 8px 0
  
  font-size 16px
  line-height 19px
  color #ffffff
  
  background-color #ee4543
  
  transition 0.2s ease
  &:hover
    background-color #fc471e
    
.filter__range-list
  margin-bottom 10px
    
.filter__range-wrap
  padding-left 15px
  padding-right 15px
    
.filter__range
  position relative
  z-index 10
  
  box-sizing border-box
  width 100%
  height 4px
  
  background-image linear-gradient(right, #fc471e 0%, #fc471e 70%, #eaeaea 70%, #eaeaea 100%)
  
  appearance none
  &::-webkit-slider-thumb
    box-sizing border-box
    width 23px
    height 23px
    
    background-color #ffffff
    box-shadow 1px 1px 5px 0px rgba(0,0,0,0)
    
    border 3px solid #fc471e
    border-radius 50%
    
    cursor pointer
    
    transition 0.2s ease
    
    appearance none
    &:hover
      box-shadow 1px 1px 5px 0px rgba(0,0,0,0.3)
  &:focus
    outline none
    
.filter__range-items
  font-size 15px
  line-height 18px
  color #555555
  
@media(max-width 1199px)
  .filter
    &--index
      display none
  
@media(max-width 870px)
  .filter
    display none
    
@media(max-width 350px)
  .filter__label
    font-size 15px
    line-height 17px