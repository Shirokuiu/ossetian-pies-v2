.main-nav
  &--sticky
    position fixed
    top 0
    left 0
    right 0
    z-index 20
    
    margin auto
    .main-nav__items
      background-color rgba(238, 69, 67, 1)
      &--empty
        &:hover
          background-color rgba(238, 69, 67, 1)
      &--basket
        position absolute
        right 0
        bottom -50px
        
        min-width 305px
  &--footer
    .main-nav__link
      font-size 19px
      line-height 23px
      color #ffffff
      &::after
        background-color #ffffff
      &:hover
        color #ffffff

.main-nav__items
  background-color rgba(238, 69, 67, 0.7)
  
  border-right 1px solid #ffffff
  
  transition 0.2s ease
  &:hover
    background-color #aa5653
  &--empty
    width 10%
    &:hover
      background-color rgba(238, 69, 67, 0.7)
  &--basket
    width 9.9%
  &--tel
    width 15.88%
  
.main-nav__headline-link
  box-sizing border-box
  width 100%
  padding 10px 15px
  
  cursor pointer
  &--basket
    background-color #53ab1d
  &--catalog,
  &--buy
    position relative
  &--clicked
    background-color #aa5653
  
.main-nav__headline-wrap
  margin-left auto
  
.main-nav__headline
  font-size 16px
  line-height 19px
  color #ffffff
  font-weight 600
  &--menu
    margin-left auto
  &--tel
    font-size 21px
    line-height 25px
  
.main-nav__menu-arrow
  width 11px
  height 14px
  margin-left auto
  .arrow
    display block
    width 11px
    height 14px
    
    fill #ffffff
    
    transform rotate(90deg)
    
.main-nav__basket-goods,
.main-nav__basket-num,
.main-nav__basket-text
  margin-left 15px
  
  font-size 24px
  line-height 29px
  color #ffffff
  font-weight 600
  
.main-nav__basket-text
  margin-top auto
  margin-left 5px
  
  font-size 16px
  line-height 19px
  &--tablet
    display none
  
.main-nav__drop-down
  position absolute
  left 0
  bottom -204px
  z-index 20
  
  padding 25px 45px
  
  background-color #ffffff
  box-shadow 1px 1px 5px 0px rgba(0,0,0,0.1)
  &--catalog
    width 300%
  &--buy
    bottom -82px
    
    width 173%
    .main-nav__drop-down-list
      li
        width auto
      &:nth-child(1)
        margin-bottom 0
  
.main-nav__drop-down-headline
  margin-left 5px
  margin-bottom 10px
  
  font-size 16px
  line-height 19px
  color #000000
  font-weight 600
  
.main-nav__drop-down-border
  height 1px
  margin-bottom 20px
  
  background-color #eaeaea
  
.main-nav__drop-down-list
  padding 0 5px
  &:nth-child(1)
    margin-bottom 40px
  li
    width 150px
  
.main-nav__link
  position relative
  
  font-size 16px
  line-height 19px
  color #444444
  font-weight 600
  white-space nowrap
  
  transition 0.2s ease
  &::after
    content ''
    
    position absolute
    left 0
    bottom -3px
    
    width 100%
    height 1px
    
    background-color #444444
    
    transition 0.2s ease
  &:hover
    color #f1433d
    &::after
      width 0
      
@media(max-width 1720px)
  .main-nav
    &--footer
      justify-content space-between
      li
        margin-right 0
  
  .main-nav__items
    &--basket
      width 200px
  
  .main-nav__headline
    font-size 0.931vw
    line-height 1.11vw
    &--tel
      font-size 0.931vw
      line-height 1.11vw
    
  .main-nav__link
    font-size 0.93vw
    line-height 0.93vw
    
@media(max-width 1570px)
  .main-nav__drop-down
    bottom -182px
    &--buy
      bottom -71px
      
      padding 25px 12%
      
  .main-nav__link
    font-size 14.6px
    line-height 17px
    
@media(max-width 1500px)
  .main-nav__drop-down
    &--buy
      width 230%
      .main-nav__drop-down-list
        justify-content flex-start
        li
          margin-right 10px
          &:last-child
            margin-right 0
            
@media(max-width 1460px)
  .main-nav__items
    &--empty
      width auto
      
@media(max-width 1200px)
  .main-nav
    &--footer
      .main-nav__link
        font-size 17px
        line-height 20px
  
  .main-nav__headline
    font-size 12px
    line-height 15px
    
@media(max-width 1199px)
  .main-nav
    &--sticky
      .main-nav__items
        &--basket
          bottom -43px
  
  .main-nav__items
    &--empty
      display none
      
  .main-nav__items
    &:nth-child(2)
      flex-grow 0
      width 230px
      
  .main-nav__headline-wrap
    margin-left 0
    
  .main-nav__drop-down
    &--catalog
      width auto
      
  .main-nav__basket-goods,
  .main-nav__basket-num
    font-size 20px
    line-height 23px
    
@media(max-width 1020px)
  .main-nav
    position relative
    
  .main-nav__headline-link
    &--catalog
      position static
      
  .main-nav__drop-down
    &--catalog
      top 47px
      right 0
      
      width auto
      margin auto
      
@media(max-width 1000px)
  .main-nav
    &--sticky
      .main-nav__items
        &--tel
          display none
          
@media(max-width 870px)
  .main-nav__items
    &:nth-child(2)
      width 195px
      
  .main-nav__headline
    font-size 10px
    
  .main-nav__headline-link
    &--basket
      padding 10px 10px
    
  .main-nav__items
    &--basket
      width 126px
      
  .main-nav__basket-goods
    margin-left 0
    
    font-size 17px
    line-height 20px
    
  .main-nav__basket-num
    margin-left 10px
    
    font-size 17px
    
  .main-nav__basket-text
    &--count
      display none
    &--tablet
      display block
  
  .main-nav__drop-down
    &--catalog
      padding 25px 15px
      
@media(max-width 768px)
  .main-nav__items
    &:nth-child(2)
      flex-grow 1
      width auto
    &:nth-child(3),
    &:nth-child(4),
    &:nth-child(5),
    &:nth-child(6)
      display none
    &--basket
      flex-grow 1
      width auto
      
  .main-nav__headline-link
    &--basket
      justify-content center
      
  .main-nav__drop-down
    &--catalog
      bottom -283px
      
      height 260px
      padding 12px 15px
      
  .main-nav__drop-down-headline
    text-align center
    
  .main-nav__drop-down-list-wrap
    display flex
    justify-content center
    
  .main-nav__drop-down-list
    flex-direction column
    &:nth-child(1)
      margin-bottom 0
    li
      margin-bottom 10px
      &:last-child
        margin-bottom 0
        
@media(max-width 380px)
  .main-nav__headline
    font-size 0
    
      
      