.user-block
  &--footer
    .user-block__tel-link
      margin-left 0
      
      font-size 24px
      line-height 29px
      color #ffffff
    .user-block__tel-text
      font-size 15px
      line-height 19px
      color #ffffff

.user-block__search-input-wrap
  width 350px

.user-block__search-input
  padding 10px 15px
  
  font-size 15px
  line-height 18px
  color #444444
  
  background-color #ffffff
  
  border 1px solid #dcdcdc
  border-radius 5px
  
  transition 0.2s ease
  &:hover
    border-color #f95a1f
  &:focus
    border-color #f95a1f
    
.user-block__search-icon
  width 20px
  height 20px
  margin-left 15px
  .search
    width 20px
    height 20px

    fill #454545
    
.user-block__delivery-text
  width 190px
  margin-left 10px
  
  font-size 15px
  line-height 18px
  color #444444
  font-weight 600
  
.user-block__tel-link
  margin-left 10px
  
  font-size 21px
  line-height 25px
  color #3d3c3b
  font-weight 600
  
.user-block__tel-text
  font-size 15px
  line-height 18px
  color #444444
  font-weight 300
  
.user-block__tel
  &--footer
    margin-bottom 45px
    .user-block__tel-items
      &:nth-child(1)
        margin-bottom 20px
        
@media(max-width 1350px)
  .user-block__search-input-wrap
    width 280px
    
@media(max-width 1280px)
  .user-block__search-input-wrap
    width 210px
    
  .user-block__search-icon
    margin-left 7px
    
@media(max-width 1199px)
  .user-block__search
    flex-grow 1
    
  .user-block__search-input-wrap
    width 100%
    
  .user-block__delivery
    display none
    
  .user-block__tel
    display none